# !/bin/bash
#
#	Permette di creare nella directory attuale un file .sh con i permessi settati
#	accetta sia create "nome file", sia create
#
if [ -z $1 ];
then
echo "Insert bash name"
read name
name=$PWD/$name.sh;
else
name=$PWD/$1.sh;
fi

echo Creating $name
touch $name
echo "# !/bin/bash" >> $name
chmod +rx $name
nano $name

